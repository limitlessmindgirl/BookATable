@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Book a Table</title>
    @Styles.Render("~/Content/book-a-table-style")
    <style>
        body { padding-top: 70px; }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "navbar-brand" })
               
                @if (BookATableMVC.Helper.AthenticationService.LoggedUser == null)
                { 
                    
                    @Html.ActionLink("Register", "Register", "Accounts", null, new { @class = "navbar-brand pull-right" })
                    @Html.ActionLink("Login", "Login", "Accounts", null, new { @class = "navbar-brand pull-right" })
                }

                @if (BookATableMVC.Helper.AthenticationService.LoggedUser != null)
                {
                    @Html.ActionLink("Restaurants", "Index", "Restaurants", null, new { @class = "navbar-brand" })
                    @Html.ActionLink("Settings", "Edit", "User", null, new { @class = "navbar-brand pull-right" })
                    @Html.ActionLink("Logout", "Logout", "Accounts", null, new { @class = "navbar-brand pull-right" })
                }

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </nav>



    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Book A Table</p>
        </footer>
    </div>
    @System.Web.Optimization.Scripts.Render("~/Scripts/book-a-table-script")
</body>
</html>
